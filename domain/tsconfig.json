{
  "extends": "../tsconfig.json", //Hereda la configuración de la raíz
  "compilerOptions": {
    "composite": true, //Permite que otros paquetes lo referencien
    "declaration": true, //Genera los archivos .d.ts para exportar los tipos
    "outDir": "dist", //Salida de los archivos compilados van a domain/dist/
    "rootDir": "src", //Directorio raíz de los archivos fuente está en domain/src/
    "noEmit": false, //SÍ genera archivos (contrario a la raíz)
    "module": "commonjs", //Usa el sistema de módulos CommonJS
    "target": "es2020", //Establece la versión de ECMAScript a la que se transpilará el código
    "declarationDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"] //Excluye las carpetas node_modules, dist y los archivos de test
}
